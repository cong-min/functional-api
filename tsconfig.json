{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "pretty": true
  },
  "files": ["./src/index.d.ts"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
